<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="709.0" prefWidth="722.0" spacing="20.0" stylesheets="@../../../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vboxexercise.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Contact information">
      <font>
         <Font size="28.0" />
      </font>
   </Label>
   <HBox prefHeight="48.0" prefWidth="450.0">
      <children>
      
          <Label fx:id="welcomeText" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="270.0" text="Name:" HBox.hgrow="ALWAYS" />
         <TextField fx:id="nameText" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="466.0" HBox.hgrow="ALWAYS" />
      </children>
   </HBox>
   <HBox prefHeight="48.0" prefWidth="450.0">
      <children>
         <Label fx:id="welcomeText1" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="270.0" text="Email" HBox.hgrow="ALWAYS" />
         <TextField fx:id="emailText" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="466.0" HBox.hgrow="ALWAYS" />
      </children>
   </HBox>
   <HBox prefHeight="48.0" prefWidth="450.0">
      <children>
         <Label fx:id="welcomeText2" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="270.0" text="Phone:" HBox.hgrow="ALWAYS" />
         <TextField fx:id="phoneText" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="466.0" HBox.hgrow="ALWAYS" />
      </children>
   </HBox>
   <HBox prefHeight="48.0" prefWidth="450.0">
      <children>
         <Label fx:id="welcomeText3" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="270.0" text="Bd date: " HBox.hgrow="ALWAYS" />
         <DatePicker fx:id="dPicker" prefHeight="26.0" prefWidth="464.0" />
      </children>
   </HBox>
   <HBox fx:id="list" prefHeight="280.0" prefWidth="682.0">
      <children>
         <Label fx:id="welcomeText31" maxWidth="1.7976931348623157E308" prefHeight="26.0" prefWidth="270.0" text="Interested in: " HBox.hgrow="ALWAYS" />
         <ListView fx:id="listView" prefHeight="273.0" prefWidth="458.0" />
      </children>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveInfo" prefHeight="30.0" prefWidth="107.0" text="Save">
            <HBox.margin>
               <Insets left="75.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelOperation" prefHeight="30.0" prefWidth="118.0" text="Cancel">
            <HBox.margin>
               <Insets left="100.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
</VBox>
